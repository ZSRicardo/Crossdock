
@model Crossdock.Models.GuiaTaimingoViewModel

@{
    ViewBag.Title = "Generación Guias - Generar";
}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

<h1></h1>
<div class="card mb-4">
    <div class="card-header">
        <h2 class="mt-3"><u>Generación de Guias </u></h2>
    </div>



    <div class="row align-items-center justify-content-center mt-3">
        <div class="col-md-7">

            <!-- BODY/FORM -->

            <form action="@Url.Action("GenerarGuia", "Guias")" method="post">
                <div class="accordion" id="accordionGuia">


                    <div class="mb-2">

                        <div class="row">
                            @Html.LabelFor(model => model.T_Etiqueta, htmlAttributes: new { @class = "col-3 col-form-control" })
                            <div class="col-3">
                                @Html.RadioButtonFor(model => model.T_Etiqueta, true, htmlAttributes: new { @class = "col-2" })@Html.Label("Entrega")
                            </div>
                            <div class="col-3">
                                @Html.RadioButtonFor(model => model.T_Etiqueta, false, htmlAttributes: new { @class = "col-2" })@Html.Label("Recolección")
                            </div>

                        </div>
                        @Html.ValidationMessageFor(model => model.T_Etiqueta, "", new { @class = "text-danger" })
                    </div>


                    <div class="accordion-item mt-3 mb-3">
                        <h2 class="accordion-header" id="headingOne">
                            <button class="accordion-button" style="font-size:15px;background-color:lightblue" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
                                <b>Datos del Destinatario</b>
                            </button>
                        </h2>


                        <div id="collapseOne" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#accordionGuia">
                            <div class="accordion-body">

                                <div class="mb-3">
                                    @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "col-2 col-form-control" })
                                    <div class="row">
                                        <div class="col-10 mt-1">
                                            @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control", id = "nombre" } })
                                        </div>
                                    </div>
                                    @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                                </div>

                                <div class="mb-3">
                                    @Html.LabelFor(model => model.ApellidoPaterno, htmlAttributes: new { @class = "col-5 col-form-control" })
                                    <div class="row">
                                        <div class="col-10 mt-1">
                                            @Html.EditorFor(model => model.ApellidoPaterno, new { htmlAttributes = new { @class = "form-control", id = "apellidoP" } })
                                        </div>
                                    </div>
                                    @Html.ValidationMessageFor(model => model.ApellidoPaterno, "", new { @class = "text-danger" })
                                </div>

                                <div class="mb-3">
                                    @Html.LabelFor(model => model.ApellidoMaterno, htmlAttributes: new { @class = "col-5 col-form-control" })
                                    <div class="row">
                                        <div class="col-10 mt-1">
                                            @Html.EditorFor(model => model.ApellidoMaterno, new { htmlAttributes = new { @class = "form-control" } })
                                        </div>
                                        <label class="col-2 col-form-label mt-1" style="color:red; font-size:12px;">(Opcional)</label>
                                    </div>
                                    @Html.ValidationMessageFor(model => model.ApellidoMaterno, "", new { @class = "text-danger" })
                                </div>

                                <div class="mb-3">
                                    @Html.LabelFor(model => model.Celular, htmlAttributes: new { @class = "col-5 col-form-control" })
                                    <div class="row">
                                        <div class="col-10 mt-1">
                                            @Html.EditorFor(model => model.Celular, new
                                            {
                                                htmlAttributes = new
                                                {
                                                    @class = "form-control",
                                                    id = "celular",
                                                    oninput = "javascript: if (this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength);",
                                                    type = "number",
                                                    maxlength = "10"
                                                }
                                            })
                                        </div>
                                    </div>
                                    @Html.ValidationMessageFor(model => model.Celular, "", new { @class = "text-danger" })
                                </div>

                                <div class="mb-3">
                                    @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "col-5 col-form-control" })
                                    <div class="row">
                                        <div class="col-10 mt-1">
                                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                        </div>
                                        <label class="col-2 col-form-label mt-1" style="color:red; font-size:12px;">(Opcional)</label>
                                    </div>
                                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                </div>

                            </div>
                        </div>
                    </div>


                    <div class="accordion-item mt-3 mb-3">
                        <h2 class="accordion-header" id="headingTwo">
                            <button class="accordion-button collapsed" style="font-size:15px;background-color:lightblue" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                                <b>Dirección de Envio</b>
                            </button>
                        </h2>
                        <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#accordionGuia">
                            <div class="accordion-body">
                                <div class="mb-3">
                                    @Html.LabelFor(model => model.CodigoPostal, htmlAttributes: new { @class = "col-5 col-form-control" })
                                    <div class="row">
                                        <div class="col-10 mt-1">
                                            @Html.EditorFor(model => model.CodigoPostal, new
                                            {
                                                htmlAttributes = new
                                                {
                                                    @class = "form-control",
                                                    id = "codigo",

                                                    oninput = "javascript: if (this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength);",
                                                    type = "number",
                                                    maxlength = "5"
                                                }
                                            })
                                        </div>
                                    </div>
                                    @Html.ValidationMessageFor(model => model.CodigoPostal, "", new { @class = "text-danger" })
                                </div>


                                <div class="mb-3">
                                    @Html.LabelFor(model => model.Colonia, htmlAttributes: new { @class = "col-5 col-form-control" })
                                    <div class="row">
                                        <div class="col-10 mt-1">
                                            @Html.EditorFor(model => model.Colonia, new { htmlAttributes = new { @class = "form-control" } })
                                        </div>
                                    </div>
                                    @Html.ValidationMessageFor(model => model.Colonia, "", new { @class = "text-danger" })

                                </div>

                                <div class="mb-3">
                                    @Html.LabelFor(model => model.Calle, htmlAttributes: new { @class = "col-5 col-form-control" })
                                    <div class="row">
                                        <div class="col-10 mt-1">
                                            @Html.EditorFor(model => model.Calle, new { htmlAttributes = new { @class = "form-control" } })
                                        </div>
                                    </div>
                                    @Html.ValidationMessageFor(model => model.Calle, "", new { @class = "text-danger" })
                                </div>

                                <div class="mb-3">
                                    @Html.LabelFor(model => model.NumeroExt, htmlAttributes: new { @class = "col-5 col-form-control" })
                                    <div class="row">
                                        <div class="col-10 mt-1">
                                            @Html.EditorFor(model => model.NumeroExt, new { htmlAttributes = new { @class = "form-control" } })
                                        </div>
                                    </div>
                                    @Html.ValidationMessageFor(model => model.NumeroExt, "", new { @class = "text-danger" })
                                </div>

                                <div class="mb-3">
                                    @Html.LabelFor(model => model.NumeroInt, htmlAttributes: new { @class = "col-5 col-form-control" })
                                    <div class="row">
                                        <div class="col-10 mt-1">
                                            @Html.EditorFor(model => model.NumeroInt, new { htmlAttributes = new { @class = "form-control" } })
                                        </div>
                                        <label class="col-2 col-form-label mt-1" style="color:red; font-size:12px;">(Opcional)</label>
                                    </div>
                                    @Html.ValidationMessageFor(model => model.NumeroInt, "", new { @class = "text-danger" })
                                </div>

                                <div class="mb-3">
                                    @Html.LabelFor(model => model.Des_Latitud, htmlAttributes: new { @class = "col-5 col-form-control" })
                                    <div class="row">
                                        <div class="col-10 mt-1">
                                            @Html.EditorFor(model => model.Des_Latitud, new { htmlAttributes = new { @class = "form-control" } })
                                        </div>
                                        <label class="col-2 col-form-label mt-1" style="color:red; font-size:12px;">(Opcional)</label>
                                    </div>
                                    @Html.ValidationMessageFor(model => model.Des_Latitud, "", new { @class = "text-danger" })
                                </div>

                                <div class="mb-3">
                                    @Html.LabelFor(model => model.Des_Longitud, htmlAttributes: new { @class = "col-5 col-form-control" })
                                    <div class="row">
                                        <div class="col-10 mt-1">
                                            @Html.EditorFor(model => model.Des_Longitud, new { htmlAttributes = new { @class = "form-control" } })
                                        </div>
                                        <label class="col-2 col-form-label mt-1" style="color:red; font-size:12px;">(Opcional)</label>
                                    </div>
                                    @Html.ValidationMessageFor(model => model.Des_Longitud, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="headingThree">
                            <button class="accordion-button collapsed" style="font-size:15px;background-color:lightblue" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                                <b>Datos del Paquete</b>
                            </button>
                        </h2>
                        <div id="collapseThree" class="accordion-collapse collapse" aria-labelledby="headingThree" data-bs-parent="#accordionGuia">
                            <div class="accordion-body">
                                <div class="mb-3">
                                    @Html.LabelFor(model => model.NoPedido, htmlAttributes: new { @class = "col-5 col-form-control" })
                                    <div class="row">
                                        <div class="col-10 mt-1">
                                            @Html.EditorFor(model => model.NoPedido, new { htmlAttributes = new { @class = "form-control", maxlength = "20" } })
                                        </div>
                                        <label class="col-2 col-form-label mt-1" style="color:red; font-size:12px;">(Opcional)</label>
                                    </div>
                                    @Html.ValidationMessageFor(model => model.NoPedido, "", new { @class = "text-danger" })
                                </div>

                                <div class="mb-3">
                                    @Html.LabelFor(model => model.Medida, htmlAttributes: new { @class = "col-5 col-form-control" })
                                    <div class="row">
                                        <div class="col-10 mt-1">
                                            @Html.DropDownListFor(model => model.Medida, new List<SelectListItem>
                                                                                                                                                                                                                                     {
                                         new SelectListItem { Text = "Chico Aprox (10x10x10)", Value="Chico" },
                                         new SelectListItem { Text = "Mediano Aprox (20x20x20)", Value="Mediano" },
                                         new SelectListItem { Text = "Grande Aprox (30x30x30)", Value="Grande" }
                                         }, "Elige una opcion", new { @class = "form-control" })
                                        </div>
                                    </div>
                                    @Html.ValidationMessageFor(model => model.Medida, "", new { @class = "text-danger" })
                                </div>

                                <div class="mb-3">
                                    @Html.LabelFor(model => model.Peso, htmlAttributes: new { @class = "col-5 col-form-control" })
                                    <div class="row">
                                        <div class="col-10 mt-1">
                                            @Html.DropDownListFor(model => model.Peso, new List<SelectListItem>
                                                                                                                                                                                                                                       {
                                           new SelectListItem { Text = "0 a 1 kg", Value="1" },
                                           new SelectListItem { Text = "1.1 a 5 kg", Value="5" },
                                           new SelectListItem { Text = "5.1 a 10 kg", Value="10" },
                                           new SelectListItem { Text = "10.1 a 15 kg", Value="15" },
                                           new SelectListItem { Text = "15.1 a 20 kg", Value="20" }
                                           }, "Elige una opcion", new { @class = "form-control" })
                                        </div>
                                    </div>
                                    @Html.ValidationMessageFor(model => model.Medida, "", new { @class = "text-danger" })
                                </div>

                                <div class="mb-3">
                                    @Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "col-5 col-form-control" })
                                    <div class="row">
                                        <div class="col-10 mt-1">
                                            @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control", maxlength = "50" } })
                                        </div>
                                        <label class="col-2 col-form-label mt-1" style="color:red; font-size:12px;">(Opcional)</label>
                                    </div>
                                    @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
                                </div>

                                <div class="mb-3">
                                    @Html.LabelFor(model => model.Instrucciones, htmlAttributes: new { @class = "col-5 col-form-control" })
                                    <div class="row">
                                        <div class="col-10 mt-1">
                                            @Html.EditorFor(model => model.Instrucciones, new { htmlAttributes = new { @class = "form-control", maxlength = "50" } })
                                        </div>
                                        <label class="col-2 col-form-label mt-1" style="color:red; font-size:12px;">(Opcional)</label>
                                    </div>
                                    @Html.ValidationMessageFor(model => model.Instrucciones, "", new { @class = "text-danger" })
                                </div>

                                <div class="mb-3">
                                    @Html.LabelFor(model => model.Numero_de_Paquetes_Extra, htmlAttributes: new { @class = "col-5 col-form-control" })
                                    <div class="row">
                                        <div class="col-10 mt-1">
                                            @Html.EditorFor(model => model.Numero_de_Paquetes_Extra, new
                                            {
                                                htmlAttributes = new
                                                {
                                                    @class = "form-control",
                                
                                                    id = "paquetes",
                                                    oninput = "javascript: if (this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength);",
                                                    type = "number",
                                                    maxlength = "10"
                                                }
                                            })
                                        </div>
                                    </div>
                                    @Html.ValidationMessageFor(model => model.Numero_de_Paquetes_Extra, "", new { @class = "text-danger" })
                                </div>

                            </div>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-evenly mt-4 mb-5">
                    @Html.ActionLink("Cancelar", "Index", new { area = "" }, new { @class = "btn btn-danger" })
                    <button id="submit-btn" class="btn btn-success" type="submit">Generar Guía</button>
                </div>

            </form>




        </div>
    </div>

    @section Scripts {
        <script type="text/javascript">

            $("#paquetes").val("1");
        function muestra() {
            var url = '@Url.Action("Verifica_destinatario", "Guias")' +
                "?nombre=" + $("#nombre").val() +
                "&apellidop=" + $("#apellidoP").val() +
                "&celular=" + $("#celular").val();
          //  $.location.href = url;

            window.location.href = url;
           // $.post(url);


        }
        </script>

        @Scripts.Render("~/bundles/jqueryval")
        @Scripts.Render("~/bundles/custom-validator")


    }
</div>
