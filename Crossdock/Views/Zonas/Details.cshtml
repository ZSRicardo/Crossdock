@model Crossdock.Models.Coberturas

@{
    ViewBag.Title = "Details";
}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

<h1></h1>
<div class="card mb-4">
    <div class="card-header">
        <div class="row aling-item-end">
            <div class="col-lg-6">
                <div class="mt-2">
                    <h2 class="mt-3"><u>Coberturas de la Zona</u></h2>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="mt-2" style="float:right;">
                    <input type="button" value="Volver" onclick="history.back()" class="btn btn-dark">
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="mt-5" style="width: 100%;">
            <table id="tablaPaquetes" class="display mt-2" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Codigo Postal</th>
                        <th>Colonia</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>

</div>


<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
         var tabladata;
        $(document).ready(function () {

            tabladata = $("#tablaPaquetes").DataTable(
                {
                    resposive: true,
                    ordering: true,
                    searching: true,
                    scrollY: "300px",
                    scrollX: true,
                    scrollCollapse: true,

                    "ajax":
                    {
                        url: '@Url.Action("ListaCoberturas", "Zonas")',
                        type: "GET",
                        dataType: "json"
                    },
                    "columns":
                        [
                            { "className": "text-center", "data": "ID_Temporal" },
                            { "className": "text-center", "data": "CodigoPostal" },
                            { "className": "text-center", "data": "Colonia" },
                        ],

                    "language":
                    {
                        "url": "https://cdn.datatables.net/plug-ins/1.11.5/i18n/es-ES.json"
                    }

                });
        })
</script>

