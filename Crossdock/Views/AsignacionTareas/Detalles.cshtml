@model IEnumerable<Crossdock.Models.Tareas>
@{
    ViewBag.Title = "Detalles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Detalles</h2>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</head>


<body>
    <h2><br />Detalles.</h2>

    @{ var wgrid = new WebGrid(source: Model, canSort: false, rowsPerPage: 10); }

    <div class="row">
        <div class="Col-md-12">
            @wgrid.GetHtml(mode: WebGridPagerModes.All, firstText: "<<Primera", previousText: "<Anterior", nextText: "Siguiente>", lastText: "última>>",
             tableStyle: "table table-bordered table-striped text-center", htmlAttributes: new { id = "wgrid" },

                 columns: wgrid.Columns(
                     wgrid.Column(columnName: "Guia", header: "Numero de Guia"),
                     wgrid.Column(columnName: "Tipo_Tarea", header: "Tipo de Tarea"),
                     wgrid.Column(columnName: "Estatus", header: "Estatus"),
                     wgrid.Column(header: "Detalles", format:@<a href="~/AsignacionTareas/Detalles/@item.Usuario_ID"><i class="btn bi-file-earmark-text-fill" style="font-size: 25px; display: true;"></i></a>),
wgrid.Column(header: "Eliminar", format:@<a href="~/AsignacionTareas/Eliminar/@item.Usuario_ID"><i class="btn bi bi-trash-fill" style="font-size: 25px; display: true;"></i></a>)

)
)
        </div>
    </div>

    <div class="d-flex mt-4 mb-5" style="margin-left: 20px">
        @Html.ActionLink("Atras", "AsignacionManual", new { area = "" }, new { @class = "btn btn-secondary", style = "display:" + @ViewBag.crear })
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>




